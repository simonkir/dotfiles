# -*- mode: snippet -*-
# name: plot (using gnuplot)
# key: pl
# condition: (not (eq (car (org-element-context)) 'latex-environment))
# --
#+name: `(format-time-string "%Y%m%d-%H%M%S")`
#+begin_src gnuplot :file /tmp/gnuplot-`(format-time-string "%Y%m%d-%H%M%S")`.png
load "~/.gnuplot"
set xlabel "$1 [$2]"
set xrange [0:$3]
set xtics $4
set ylabel "$5 [$6]"
set ytics $7
f(x) = $8
plot f(x) title ""$0
#+end_src