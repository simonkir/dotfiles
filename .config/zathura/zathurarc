set statusbar-bg "#005fff"
set statusbar-fg "#ffffff"

set notification-bg "#00df87"
set notification-error-bg "#cf0000"
set notification-warning-bg "#ff5f00"

set inputbar-bg "#afffff"
set inputbar-fg "#005fff"

set completion-bg "#afffff"
set completion-fg "#005fff"

set completion-highlight-fg "#afffff"
