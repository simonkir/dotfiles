/* -*- mode: maxima -*- */



/* general settings */
leftjust: true;



/* load some commonly used packages */
load(vect);
load(eigen);



/* define some helper functions */
log10(x) := log(x)/log(10);
log2(x) := log(x)/log(2);

deg2rad(x) := 2*%pi*x/360;
rad2deg(x) := 360*x/2/%pi;

dot(a,b) := a.b;
cross(a,b) := express(a~b);
triple(a,b,c) := dot(cross(a,b),c);
norm(a) := sqrt(a.a);
